pipeline
{
  agent any
  tools{
    maven 'Maven'
  }
  stages{
    stage('Clean Workspace') {
            steps {
                deleteDir()
            }
      }
    stage ('Initialize') {
      steps{
        sh '''
              echo "PATH =${PATH}"
              echo "M2_HOME =${M2_HOME}"
           '''
        
      }
    }
  stage('Retrieve Source Code') {
            steps {
                git branch: 'main', url: 'https://github.com/chand-infosec/gcp.git'
            }
  }
  stage ('Build') {
      steps{
        sh 'mvn clean package -X'        
      }
    }
  }
}
